# 机器人配置
BOT_TOKEN=your_bot_token_here  # 从 @BotFather 获取的机器人 Token
API_ID=your_api_id  # 从 https://my.telegram.org 获取的 API ID
API_HASH=your_api_hash  # 从 https://my.telegram.org 获取的 API Hash

# 数据库配置
DATABASE_URL=sqlite:///telegram_bot.db  # SQLite 数据库文件路径

# 安全配置
ENCRYPTION_KEY=your_encryption_key_here  # 用于加密账户信息的密钥（32字节）
ALLOWED_USERS=  # 允许使用机器人的用户 ID 列表，用逗号分隔（留空表示允许所有用户）

# 发送限制配置
MAX_MESSAGES_PER_ACCOUNT_PER_DAY=50  # 每个账户每天最多发送消息数量
MIN_DELAY_SECONDS=30  # 消息发送最小延迟（秒）
MAX_DELAY_SECONDS=120  # 消息发送最大延迟（秒）
